<style>
  [cite_start]/* Styles remain identical to your provided source [cite: 16-31] */
  .site-footer {
    padding: 60px 20px 40px;
    border-top: 1px solid var(--border-secondary);
    background: rgba(var(--bg-primary-rgb), 0.9);
    color: var(--text-secondary);
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto 40px;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 30px;
  }

  .footer-column {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .footer-heading {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--text-primary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .footer-links {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .footer-links a {
    text-decoration: none;
    font-size: 1rem;
    display: flex;
    align-items: center;
    gap: 8px;
    color: var(--text-secondary);
    transition: color 0.2s ease;
  }

  .footer-links a:hover {
    color: var(--brand-purple);
  }

  .cta-link {
    padding: 6px 12px;
    border-radius: 6px;
    background: var(--btn-primary-bg);
    color: var(--btn-primary-text);
    font-weight: 500;
    width: fit-content;
  }

  .product-logo {
    width: 22px;
    height: 22px;
  }

  .icon {
    width: 20px;
    height: 20px;
    fill: currentColor;
    transition: transform 0.2s;
  }

  .social-links a:hover .icon {
    transform: scale(1.1);
  }

  .footer-bottom {
    text-align: center;
    font-size: 0.9rem;
    color: var(--text-tertiary);
    border-top: 1px solid var(--border-secondary);
    padding-top: 25px;
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 500px) {
    .footer-content {
      grid-template-columns: 1fr;
    }
  }
</style>