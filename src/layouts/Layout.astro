---
import Header from "../components/shared/Header.astro";
import Footer from "../components/shared/Footer.astro";
import CookieConsent from "../components/shared/CookieConsent.astro";
import IndexBg from "../components/shared/SpaceBg.astro";
import "../styles/style.css";

const { title } = Astro.props;
---

<html lang="en" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | VigilGuard</title>
    <link rel="icon" href="/favicon.svg" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Space+Grotesk:wght@400;700&display=swap" />
    <script is:inline>
      const theme = localStorage.getItem("theme") || "dark";
      document.documentElement.setAttribute("data-theme", theme);
    </script>
  </head>
  <body>
    <Header />
    <IndexBg />
    <main class="relative z-10">
      <slot />
    </main>
    <Footer />
    <CookieConsent />
  </body>
</html>